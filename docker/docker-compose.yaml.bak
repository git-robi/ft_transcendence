#YAML file for Transcendance

networks:
  t42bcnet:
    name: t42bcnet
    driver: bridge

volumes:
  db_data:
  frontend_data:
  backend_data:

services:
  #NGINX PROXY
  nginx:
    container_name: nginx
    image: nginx:stable-alpine
    networks:
      - t42bcnet
    volumes:
      - ./requirements/nginx/templates/:/etc/nginx/templates
      - frontend_data:/var/www/:ro 
    environment:
      - NGINX_HOST=${NGINX_HOST}
      - NGINX_PORT=${FRONTEND_PORT}
    ports:
      - ${EXPOSED_PORT}:${FRONTEND_PORT}
    restart: unless-stopped

  #POSTGRESQL
  postgresql:
    container_name: postgresql
    image: postgres:17.7-alpine
    environment:
      - POSTGRES_DB=${DB_NAME}
      - POSTGRES_USER=${DB_USER}
      - POSTGRES_PASSWORD=${DB_PASSWORD}
    volumes:
      - db_data:/var/lib/postgresql/data
      - ./requirements/postgresql/schema.sql:/docker-entrypoint-initdb.d/schema.sql
    networks:
      - t42bcnet
    restart: unless-stopped
  
  #FRONTEND
  frontend:
    container_name: frontend
    build: 
      context: ../
      dockerfile: docker/requirements/frontend/dockerfile
      ARG:
        - VITE_API_URL=http://backend:${BACKEND_PORT}
    working_dir: /app
    image: frontend:react
    volumes:
      - ../client:/src:ro
      #- frontend_data:/app/dist 
    environment:
      - VITE_API_URL=http://backend:${BACKEND_PORT}
    networks:
      - t42bcnet
    restart: unless-stopped
  
  #BACKEND
  backend:
    image: node:lts-alpine
    container_name: backend
    build: 
      context: ../
      dockerfile: docker/requirements/backend/dockerfile 
    working_dir: /app
    image: backend:express
    environment:
      - PORT=${BACKEND_PORT}
      - PGHOST=${DB_HOST}
      - PGUSER=${DB_USER}
      - PGDATABASE=${DB_NAME}
      - PGPASSWORD=${DB_PASSWORD}
      - PGPORT=${DB_PORT}
      - CLIENT_URL=${CLIENT_URL}
      - JWT_SECRET=${BACKEND_JWT_SECRET}
    volumes:
      - ../server/src:/src:ro
      #- backend_data:/app/dist 
    networks:
      - t42bcnet
    restart: unless-stopped
  
  #BACKEND2
  backend2:
    container_name: backend2
    image: node:lts-alpine
    working_dir: /app
    environment:
      - NODE_ENV=production
    volumes:
      - ../server:/app
    command: ["npm", "start"]
    networks:
      - t42bcnet
    restart: unless-stopped
