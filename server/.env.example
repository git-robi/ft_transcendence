# For Docker: use db (the container name)
DATABASE_URL=postgresql://postgres:password@localhost:5432/pongDB

# Google OAuth
ID_CLIENT=
CLIENT_SECRET=

JWT_SECRET=your-secret-key

CLIENT_URL=http://localhost:5173
