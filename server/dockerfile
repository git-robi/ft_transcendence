# ========================================
# Optimized Multi-Stage Dockerfile
# Node.js TypeScript Application
# ========================================
ARG NODE_VERSION=lts-alpine
FROM node:${NODE_VERSION} AS base

RUN apk update && apk add nano curl postgresql-client
# Set working directory
WORKDIR /app

# Create non-root user for security
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001 -G nodejs && \
    chown -R nodejs:nodejs /app

# ========================================
# Dependencies Stage
# ========================================
FROM base AS deps

# Copy package files
COPY ./server/package*.json /app

# Install production dependencies
RUN --mount=type=cache,target=/root/.npm,sharing=locked \
    npm ci --omit=dev && \
    npm cache clean --force

# Set proper ownership
RUN chown -R nodejs:nodejs /app

# ========================================
# Build Dependencies Stage
# ========================================
FROM base AS build-deps

# Copy package files
COPY ./server/package*.json /app

# Install all dependencies with build optimizations
RUN --mount=type=cache,target=/root/.npm,sharing=locked \
    npm ci --no-audit --no-fund && \
    npm cache clean --force

# Create necessary directories and set permissions
RUN mkdir -p /app/node_modules/.vite && \
    chown -R nodejs:nodejs /app

# ========================================
# Build Stage
# ========================================
FROM build-deps AS build

# Copy only necessary files for building (respects .dockerignore)
COPY --chown=nodejs:nodejs ./server /app

# Generate the application
RUN npx prisma generate

# Set proper ownership
RUN chown -R nodejs:nodejs /app

# ========================================
# Prisma Migration Stage
# ========================================
FROM build-deps AS migration

ARG DATABASE_URL
# Set environment
ENV NODE_ENV=development \
    NPM_CONFIG_LOGLEVEL=warn \
	DATABASE_URL=${DATABASE_URL}

# Copy source files
COPY ./server /app
RUN echo ${DATABASE_URL}
RUN echo ${GIT_BRANCH}
ENTRYPOINT ["npx", "prisma", "migrate", "dev", "--name='$GIT_BRANCH'"]
#RUN npx prisma generate
#ENTRYPOINT ["tail", "-f"]

# ========================================
# Development Stage
# ========================================
FROM build-deps AS development

# Set environment
ENV NODE_ENV=development \
    NPM_CONFIG_LOGLEVEL=warn

COPY ./server /app
COPY ./server/entrypoint.sh /app/entrypoint.sh
# Ensure all directories have proper permissions
RUN chown -R nodejs:nodejs /app && \
    chmod -R 755 /app
RUN chmod +x /app/entrypoint.sh

# Switch to non-root user
#USER nodejs

# Expose ports
EXPOSE 3001

# Start development server
ENTRYPOINT ["/bin/sh", "/app/entrypoint.sh"]
#CMD ["npm", "run", "dev"]

# ========================================
# Production Stage
# ========================================
ARG NODE_VERSION=lts-alpine
FROM node:${NODE_VERSION} AS production

# Set working directory
WORKDIR /app

# Create non-root user for security
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001 -G nodejs && \
    chown -R nodejs:nodejs /app

# Set optimized environment variables
ENV NODE_ENV=production \
    NODE_OPTIONS="--max-old-space-size=256 --no-warnings" \
    NPM_CONFIG_LOGLEVEL=silent

# Copy production dependencies from deps stage
COPY --from=deps --chown=nodejs:nodejs /app/node_modules ./node_modules
COPY --from=deps --chown=nodejs:nodejs /app/package*.json ./
# Copy built application from build stage
#COPY --from=build --chown=nodejs:nodejs /app/dist ./dist

# Switch to non-root user for security
USER nodejs

# Expose port
EXPOSE 3001

# Start production server
CMD ["node", "dist/index.js"]

# ========================================
# Test Stage
# ========================================
FROM build-deps AS test

# Set environment
ENV NODE_ENV=test \
    CI=true

# Copy source files
COPY --chown=nodejs:nodejs . .

# Switch to non-root user
USER nodejs

# Run tests with coverage
CMD ["npm", "run", "test:coverage"]


