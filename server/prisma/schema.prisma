generator client {
  provider = "prisma-client"
  output = "../src/prisma/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model user {
  id        Int      @id @default(autoincrement())
  email     String  @unique
  googleId  String? @unique
  githubId  String? @unique
  password  String?  //should be optional as with gitHub and Google there is no password
  createdAt DateTime @default(now())

  profile   profile?
}

model profile {
  userId    Int    @id
  user      user    @relation(fields: [userId], references: [id], onDelete: Cascade)

  name      String
  avatarUrl String   @default("/avatars/avatar_default.png") @db.VarChar(2048)
  bio       String   @db.VarChar(255)
}
