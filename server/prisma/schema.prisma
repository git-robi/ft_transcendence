generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model users {
  id        Int      @id @default(autoincrement())
  email     String  @unique
  name      String
  googleId  String? @unique
  githubId  String? @unique
  password  String
  createdAt DateTime @default(now())

  apiKeys   apiKeys[]
}

model apiKeys {
  id Int @id @default(autoincrement())
  userId Int
  name String?
  createdAt DateTime @default(now())
  expiresAt DateTime? 
  hashedKey String @unique

  //add rate limit

  //learn prisma index

   user users @relation(fields: [userId], references: [id])

}
